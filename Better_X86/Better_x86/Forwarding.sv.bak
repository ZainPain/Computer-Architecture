import lc3b_types::*;

module forward
(
	input lc3b_reg ID_EX_sr1,
	input lc3b_reg ID_EX_sr2,
	input lc3b_reg ID_EX_dest,
	input logic EX_MEM_write,
	input logic MEM_WB_write,
	input lc3b_reg EX_MEM_dest,
	input lc3b_reg MEM_WB_reg,
	output logic [1:0] ForwardA,
	output logic [1:0] ForwardB
		
);
always_comb
begin
	/* EX HAZARD */
	if( EX_MEM_write && (EX_MEM_dest == ID_EX_sr1))
		ForwardA = 2'b10;
	if(EX_MEM_write && (EX_MEM_dest == ID_EX_sr2))
		ForwardB = 2'b10;
	
	/* MEM HAZARD */
end

endmodule: forward